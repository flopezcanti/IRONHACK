<!doctype html>

<head>
  <title>Add | Online Calculator</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
  <link rel="stylesheet" type="text/css" href="/css/bootstrap-theme.css">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>
	<div class="container">

  	<div class="row">
  		<div class="col-md-12">
  			<h1>RUBY CALCULATOR</h1>
  		</div>
  	</div>

  	<div class="row">
  		<div class="col-md-8 col-md-offset-4">
  			<div class="form-group">

  				<form action="/home" method="POST">
  					<div class="row">
  						<div class="form-group">
  							<div class="col-md-3">
  								<label for="number1">Number1</label>
  								<br>
  								<input type="number" placeholder="1st number" name="number1" step="0.01"> 
  							</div>
  							<div class="col-md-3">
  								<label for="number2">Number2</label>
  								<br>
  								<input type="number" placeholder="2nd number" name="number2" step="0.01">
  							</div>
  						</div>
  					</div>

  					<div class="row">
  					  <div class="col-md-6 buttons">

  							<button type="submit" name="operation" value="add" class="btn btn-success">ADD</button>
  							<button type="submit" name="operation" value="substract" class="btn btn-warning">SUBSTRACT</button>
  							<button type="submit" name="operation" value="multiply" class="btn btn-info">MULTIPLY</button>
  							<button type="submit" name="operation" value="divide" class="btn btn-default">DIVIDE</button>
  						
  						</div>
  					</div>
  				</form>  				
  		</div>
  	</div>
  </div>
</body>
</html>